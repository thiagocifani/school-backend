# Database
DATABASE_URL=postgres://username:password@hostname:5432/database_name

# Redis (for Sidekiq and caching)
REDIS_URL=redis://hostname:port

# Application
RAILS_ENV=production
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true
SECRET_KEY_BASE=your_secret_key_here

# Mailer
MAILER_HOST=your-app.herokuapp.com

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend-app.herokuapp.com

# Heroku
HEROKU_APP_NAME=your-api-app-name

# JWT Secret (generate with: rake secret)
JWT_SECRET=your_jwt_secret_here

# Cora API (if using payment integration)
CORA_BASE_URL=https://api.cora.com.br
CORA_CLIENT_ID=your_cora_client_id
CORA_ENVIRONMENT=production

# AWS S3 (for file uploads - optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET=your-bucket-name

# Sentry (for error monitoring - optional)
SENTRY_DSN=your_sentry_dsn_here